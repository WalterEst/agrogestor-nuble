{
  "info": {
    "name": "Agrogestor API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Colección de endpoints básicos para probar la API de Agrogestor."
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Nuevo Usuario\",\n  \"email\": \"usuario@example.com\",\n  \"password\": \"secreto123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "register"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@agrogestor.local\",\n  \"password\": \"admin123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["auth", "login"]
        }
      }
    },
    {
      "name": "List Pending",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/pending",
          "host": ["{{baseUrl}}"],
          "path": ["users", "pending"]
        }
      }
    },
    {
      "name": "Approve",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/{{pendingUserId}}/approve",
          "host": ["{{baseUrl}}"],
          "path": ["users", "{{pendingUserId}}", "approve"]
        }
      }
    },
    {
      "name": "Deny",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/{{pendingUserId}}/deny",
          "host": ["{{baseUrl}}"],
          "path": ["users", "{{pendingUserId}}", "deny"]
        }
      }
    },
    {
      "name": "List Posts",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/posts",
          "host": ["{{baseUrl}}"],
          "path": ["posts"]
        }
      }
    },
    {
      "name": "Create Post",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "title",
              "value": "Venta de fertilizante",
              "type": "text"
            },
            {
              "key": "description",
              "value": "Saco de 50kg",
              "type": "text"
            },
            {
              "key": "price",
              "value": "1200",
              "type": "text"
            },
            {
              "key": "image",
              "type": "file",
              "src": "/ruta/al/archivo.jpg"
            }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/posts",
          "host": ["{{baseUrl}}"],
          "path": ["posts"]
        }
      }
    },
    {
      "name": "My Posts",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/posts/mine",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "mine"]
        }
      }
    },
    {
      "name": "Toggle",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/posts/{{postId}}/toggle",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "{{postId}}", "toggle"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000/api"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "pendingUserId",
      "value": "00000000-0000-0000-0000-000000000000"
    },
    {
      "key": "postId",
      "value": "00000000-0000-0000-0000-000000000000"
    }
  ]
}
